.navbar.navbar-inverse.navbar-fixed-top{ :role => "navigation" }
  .container
    .navbar-header
      %a.navbar-brand{ :href=>"#" } CoderBacon
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{ :href=>"#" } Home
        %li.dropdown
          %a.dropdown-toggle{ :href=>"#", :data => { :toggle=>"dropdown" }} Messages
          %ul.dropdown-menu
            %li
              %a{:href=> messages_path} All
            %li
              %a{:href=> new_message_path} New
      %ul.nav.navbar-nav.navbar-right
        -if user_signed_in?
          %li
            = link_to('Logout', destroy_user_session_path, :method => :delete)
        -else
          %li
            = link_to('Login', new_user_session_path)
