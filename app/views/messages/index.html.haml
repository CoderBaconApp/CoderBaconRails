.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          - if @conversation
            Conversation with #{@conversation.listener_emails [current_user]}
          - else
            New Conversation
      .panel-body
        - if @conversation and @conversation.messages.any?
          = render partial: "message", collection: @conversation.messages
        %h2 Send a message
        = render partial: "new", :locals => { :message => @message, :form_post_path => @form_post_path }
